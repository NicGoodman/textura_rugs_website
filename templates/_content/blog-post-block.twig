<article id="" class="w-full p-4 lg:w-1/2 mix {% if entry.postCategories|length %}{% for tag in entry.postCategories.all() %}{{ tag.title|replace(' ', '') }} {% endfor %}{% endif %}">
	{% if post.thumbnail|length %}
		{% set thumbnail = post.thumbnail.one().optimizedImages %}
	{% endif %}
	<a href="{{ post.getUrl }}" class="flex flex-col md:flex-row">
		{% if post.thumbnail|length %}
			<picture class="flex-shrink-0 pt-2 pr-4">
				<img src="{{ thumbnail.src() }}" alt="" data-srcset="{{ thumbnail.srcset() }}" class="object-cover w-full h-64 border-2 md:w-36 border-rug-grey hover:border-rug-light-blue">
			</picture>
		{% endif %}
		<section id="" class="flex flex-col">
			<h2>{{ post.title }}
				â€¢
				{{ post.date|date('long') }}</h2>
			<div>
				{{ post.intro }}
			</div>
		</section>
		{% for tag in entry.postCategories.all() %}{{ tag.title|replace(' ', '') }} {% endfor %}
	</a>
</article>
