<ul class="flex flex-row items-center justify-center space-x-4 md:justify-start">
	{% for block in socialMediaList %}
		{% set accountLink = block.accountLink %}
		{% if 'youtube' in accountLink %}
			<li>
				<a href="{{ accountLink }}" class="social-item" target="_blank" rel="nofollow" aria-label="youtube" rel="noreferrer">
					<i class="fab fa-youtube"></i>
				</a>
			</li>
		{% elseif 'facebook' in accountLink %}
			<li>
				<a href="{{ accountLink }}" class="social-item" @click="isOpen = false" target="_blank" rel="nofollow" aria-label="facebook" rel="noreferrer">
					<i class="fab fa-facebook-f"></i>
				</a>
			</li>
		{% elseif 'twitter' in accountLink %}
			<li>
				<a href="{{ accountLink }}" class="social-item" @click="isOpen = false" target="_blank" rel="nofollow" aria-label="twitter" rel="noreferrer">
					<i class="fab fa-twitter"></i>
				</a>
			</li>
		{% elseif 'instagram' in accountLink %}
			<li>
				<a href="{{ accountLink }}" class="social-item" @click="isOpen = false" target="_blank" rel="nofollow" aria-label="instagram" rel="noreferrer">
					<i class="fab fa-instagram"></i>
				</a>
			</li>
		{% elseif 'pinterest' in accountLink %}
			<li>
				<a href="{{ accountLink }}" class="social-item" @click="isOpen = false" target="_blank" rel="nofollow" aria-label="pinterest" rel="noreferrer">
					<i class="fab fa-pinterest-p"></i>
				</a>
			</li>
		{% elseif 'linkedin' in accountLink %}
			<li>
				<a href="{{ accountLink }}" class="social-item" @click="isOpen = false" target="_blank" rel="nofollow" aria-label="linkedin" rel="noreferrer">
					<i class="fab fa-linkedin-in"></i>
				</a>
			</li>
		{% endif %}
	{% endfor %}
</ul>
