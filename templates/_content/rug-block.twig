<article id="{{ loop.index }}" class="p-4 mix" data-origin="{% if entry.origin|length %}{% for tag in entry.origin.all() %}
	{{ tag.title }} 
{% endfor %}{% endif %}" data-age="{% if entry.age|length %}{% for tag in entry.age.all() %}
	{{ tag.title }} 
{% endfor %}{% endif %}" data-primarycolor="{% if entry.primaryColor|length %}{% for tag in entry.primaryColor.all() %}
	{{ tag.title }} 
{% endfor %}{% endif %}" data-secondarycolor="{% if entry.secondaryColor|length %}{% for tag in entry.secondaryColor.all() %}
	{{ tag.title }} 
{% endfor %}{% endif %}" data-collection="{% if entry.collection|length %}{% for category in entry.collection.all() %}
	{{ category.title }} 
{% endfor %}{% endif %}" data-size="{% if entry.size|length %}{% for category in entry.size.all() %}
	{{ category.title }} 
{% endfor %}{% endif %}">
	<a href="{{ entry.getUrl() }}">
		<picture>
			<img src="{{ thumbnail.src() }}" data-srcset="{{ thumbnail.srcset() }}" alt="{{ name }}" class="object-cover w-56 h-56 hover:border-rug-yellow hover:border-2">
		</picture>
	</a>
</article>


