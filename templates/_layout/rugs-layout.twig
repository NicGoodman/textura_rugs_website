{% extends "_layout/base-layout" %}

{% block header %}
	{% include "_frame/header.twig" %}
{% endblock %}
{% block main %}
	<main class="flex flex-col items-center flex-grow w-full bg-rug-white">
		{% set heroOpacity = "opacity-25" %}
		{% set headingText = "All Rugs" %}
		{% set inventoryQuery = craft.entries().section('inventory') %}
		{% include "_pages/hero-section" %}

		<section id="" class="w-full section-wrapper">
			{% include "_snippets/heading" %}
			{% include "_pages/filter-controls-section" %}
			{% include "_pages/inventory-feed-section" %}
		</section>

	</main>
{% endblock %}
{% block footer %}
	{% include "_frame/footer.twig" %}
	<script src="{{ siteUrl }}assets/js/mixitup.min.js"></script>
	<script src="{{ siteUrl }}assets/js/mixitup-pagination.min.js"></script>
	<script src="{{ siteUrl }}assets/js/mixitup-multifilter.min.js"></script>
{% endblock %}
