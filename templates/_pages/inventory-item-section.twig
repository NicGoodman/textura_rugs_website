<article id="" class="flex flex-col flex-wrap w-full md:flex-row">
	<h1>{{ entry.title }}</h1>
	<section id="" class="px-4 text-left md:text-right">
		<h2>{{ entry.productDescription }}</h2>
		<ul>
			<li>
				<p>
					Length:
					<strong>{{ entry.physicalLength }}</strong>
				</p>
			</li>
			<li>
				<p>
					Width:
					<strong>{{ entry.physicalWidth }}</strong>
				</p>
			</li>
			<li>
				<p>
					Origin:
					{% set origins = entry.origin.all() %}
					{% for tag in origins %}
						<strong>{{ tag.title }}</strong>
					{% endfor %}
				</p>
			</li>
			<li>
				<p>
					Primary Color:
                    {% set colors = entry.colors.all() %}
					{% for tag in colors %}
						<strong>{{ tag.title }}</strong>
					{% endfor %}
				</p>
			</li>
			<li>
				<p>
					Secondary Color:
                    {% set colors = entry.colors.all() %}
					{% for tag in colors %}
						<strong>{{ tag.title }}</strong>
					{% endfor %}
				</p>
			</li>
			<li>
				<p>
					Materials:
                    {% set materials = entry.material.all() %}
					{% for tag in materials %}
						<strong>{{ tag.title }}</strong>
					{% endfor %}
				</p>
			</li>
			<li>
				<p>
					Construction:
                    {% set construction = entry.construction.all() %}
					{% for tag in construction %}
						<strong>{{ tag.title }}</strong>
					{% endfor %}
				</p>
			</li>
			<li>
				<p>
					Age:
                    {% set age = entry.age.all() %}
					{% for tag in age %}
						<strong>{{ tag.title }}</strong>
					{% endfor %}
				</p>
			</li>
		</ul>
		<form method="POST" id="add-to-wishlist">
			<input type="hidden" name="action" value="wishlist/items/toggle">
			{{ csrfInput() }}
			<input type="hidden" name="wishListURL" value="/wish-list">
			<input type="hidden" name="elementId" value="{{ entry.id }}">

			<button type="submit" name="button" class="wish-list-button btn-main">Add to Wishlist</button>
		</form>
	</section>
	<section id="" class="flex flex-row flex-wrap px-4 justify-evenly">
		{% for image in entry.productImages.all() %}
			{% set thumbnail = image.optimizedImages %}
			<picture>
				<a href="#" data-featherlight="{{ image.getUrl }}">
					<img src="{{ thumbnail.src() }}" alt="{{ image.title }}" data-srcset "{{ thumbnail.srcset() }}" class="object-cover w-64 h-64 ">
				</a>
			</picture>

		{% endfor %}
	</section>
</article>
