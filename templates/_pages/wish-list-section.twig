<div id="wish-list" class="wishListContent">
	<i class="z-50 text-2xl cursor-pointer fas fa-times text-rug-dark-blue" @click="show = false"></i>
	{# Get the list #}
	{% set list = craft.wishlist.lists().default(true).one() %}
	{% if list|length %}
		{# Display list items #}
		<section class="flex flex-row flex-wrap w-full">
			{% for item in list.items.all() %}
            {% set entry = entry.id %}
				{% set thumbnail = entry.primaryImage.one().optimizedImages %}
				<picture class="p-4">
					<img src="{{ thumbnail.src() }}" alt="" data-srcset="{{ thumbnail.srcset() }}" class="object-cover w-48 h-48 mb-2">
					<p>{{ item.title }}</p>
				</picture>
			{% endfor %}
		</section>
	{% endif %}
</div>
