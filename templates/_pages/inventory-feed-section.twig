<section id="inventory-feed" class="flex flex-row flex-wrap items-start justify-center w-full">
	{% set list = craft.wishlist.lists().default(true).one() %}
	{% for entry in inventoryQuery.all() %}
		{% set name = entry.productTitle %}
		{% if entry.primaryImage|length %}
			{% set thumbnail = entry.primaryImage.one().optimizedImages %}
		{% endif %}
		{% include "_content/rug-block" %}
	{% endfor %}
</section>
<div class="p-4 text-lg text-center border-t mixitup-page-list font-bioRhyme text-rug-dark-blue border-dark-blue"></div>
<div class="fixed top-0 left-0 z-50 flex flex-col items-end justify-end w-screen min-h-screen overflow-scroll" style="background-color: rgba(33, 42, 48, 0.33);" x-show="showRug" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform" x-transition:enter-end="opacity-100 transform" x-transition:leave="transition ease-in duration-300" x-transition:leave-start="opacity-100 transform" x-transition:leave-end="opacity-0 transform">
	<div id="inventory-item" class="absolute right-0 z-50 flex flex-col justify-between w-full h-full p-8 overflow-scroll shadow-2xl bg-rug-white text-rug-dark-blue max-h-2/3-screen" x-show="showRug" @click.away="showRug = false" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform translate-y-full" x-transition:enter-end="opacity-100 transform" x-transition:leave="transition ease-in duration-300" x-transition:leave-start="opacity-100 transform" x-transition:leave-end="opacity-0 transform translate-y-full"></div>
</div>
