<section id="hero-section" class="relative w-full bg-rug-white">
	{% set heroImage = entry.heroImage.one().optimizedImages %}
	{% set heroImageAltText = entry.heroImage.one().title %}
	<picture id="hero-image">
		<img src="{{ heroImage.src() }}" alt="{{ heroImageAltText }}" data-srcset="{{ heroImage.srcset() }}" class="object-cover w-screen max-h-2/3-screen {{ heroOpacity }}">
	</picture>
	{% if entry.heroIntro|length %}
		{% set introImage = "" %}
		{% set introHeader = "" %}
		{% set introBodyText = "" %}
		{% set ctaText = "" %}
		{% set ctaLink = "" %}
		{% for block in entry.heroIntro.all() %}
			{% set introImage = block.introImage.one().optimizedImages %}
			{% set introHeader = block.introHeader %}
			{% set introBodyText = block.introBodyText %}
			{% set ctaText = block.introCtaText %}
			{% set ctaLink = block.introCtaLink.one().getUrl() %}
		{% endfor %}
		<header id="hero-intro-container" class="absolute top-0 left-0 flex flex-row items-end justify-center w-full h-full p-16">
			<section id="hero-intro-wrapper" class="flex flex-row max-w-3xl">
				<picture id="hero-intro-image" class="w-1/2 border-2 border-rug-light-blue">
					<img src="" alt="" class="">
				</picture>
				<article id="hero-intro-text" class="w-1/2 p-4 bg-rug-dark-blue text-rug-white">
					<h1>{{ introHeader }}</h1>
					<h2>{{ introBodyText }}</h2>
					{% include "_snippets/btn-main" %}
				</article>
			</section>
		</header>
	{% endif %}
</section>
