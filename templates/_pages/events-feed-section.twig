<section id="events-feed-section" class="flex flex-col flex-wrap w-full section-wrapper">
	<h1 class="p-4">Upcoming Events</h1>
	<div id="" class="flex flex-row flex-wrap">
		{% for post in craft.entries().section('eventPosts').all() if post.date|date('Y-m-d') >= now|date('Y-m-d') %}
			{% include "_content/event-post-block" %}
		{% else %}
			<article id="" class="self-center w-full mt-12 text-center md:w-2/3 text-rug-black">
				{{ entry.noEventsMessage|nl2br }}
			</article>
		{% endfor %}
	</div>
</section>
