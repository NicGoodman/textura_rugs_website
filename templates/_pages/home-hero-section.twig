{% set heroImage = entry.heroImage.one().optimizedImages %}
<section id="hero-section" class="flex flex-col w-full bg-opacity-25 bg-no-repeat bg-cover bg-rug-white" style="background-image: url('{{ heroImage.src() }}'); background-color: rgba(255, 255, 255, 0.66);
		    background-blend-mode: lighten;">
	{% if entry.heroIntro|length %}
		{% set introImage = "" %}
		{% set introHeader = "" %}
		{% set introBodyText = "" %}
		{% set ctaText = "" %}
		{% set ctaLink = "" %}
		{% for block in entry.heroIntro.all() %}
			{% set introImage = block.introImage.one().optimizedImages %}
			{% set introHeader = block.introHeader %}
			{% set introBodyText = block.introBodyText %}
			{% set ctaText = block.introCtaText %}
			{% set ctaLink = block.introCtaLink.one().getUrl() %}
		{% endfor %}
		<header id="hero-intro-container" class="flex flex-row items-end justify-around w-full h-full p-4 md:p-16 flex-grow-1">
			<section id="hero-intro-wrapper" class="flex flex-row flex-wrap max-w-3xl flex-shrink-1 md:flex-no-wrap">
				<picture id="hero-intro-image" class="flex-grow mt-8 mb-12 border-2 md:block border-rug-grey md:mt-0">
					<img src="{{ introImage.src }}" alt="" data-srcset="{{ introImage.srcset}}" class="object-cover w-full h-full max-h-2/3-screen md:max-h-full">
				</picture>
				<article id="hero-intro-text" class="flex flex-col justify-between flex-shrink-0 w-full px-4 pt-4 pb-6 mt-0 border-2 md:mt-20 md:mx-4 md:w-1/2 bg-rug-dark-blue text-rug-white border-rug-grey">
					<span id="text-wrapper" class="">
						<h1>{{ introHeader }}</h1>
						<h2 class="mb-6">{{ introBodyText|nl2br }}</h2>
					</span>
					{% include "_snippets/btn-main" %}
					<section id="hero-contact-block" class="flex-col hidden mt-10 text-left md:flex lg:hidden text-rug-white">
						<h3>GET IN TOUCH</h3>
						{% set contactStyles = "text-left text-rug-white text-base font-bioRhyme" %}
						{% include "_snippets/contact-info" %}
						<br/>
						{% set ctaText = "EMAIL US" %}
						{% set ctaLink = "mailto:sales@texturarugs.com" %}
						{% include "_snippets/btn-main" %}
						<br/>
						{% set ctaText = "828.519.9066" %}
						{% set ctaLink = "tel:+1-828-519-9066" %}
						{% include "_snippets/btn-main" %}
					</section>
				</article>

			</section>
			<section id="hero-contact-block" class="flex-col hidden p-4 text-right border-2 lg:flex bg-rug-dark-blue text-rug-white border-rug-grey">
				<h3>GET IN TOUCH</h3>
				{% set contactStyles = "text-right text-rug-white text-base font-bioRhyme" %}
				{% include "_snippets/contact-info" %}
				<br/>
				{% set ctaText = "EMAIL US" %}
				{% set ctaLink = "mailto:sales@texturarugs.com" %}
				{% include "_snippets/btn-main" %}
				<br/>
				{% set ctaText = "828.519.9066" %}
				{% set ctaLink = "tel:+1-828-519-9066" %}
				{% include "_snippets/btn-main" %}
			</section>
		</header>
	{% endif %}
</section>
