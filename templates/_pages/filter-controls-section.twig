<section id="" class="w-full h-full p-4 section-wrapper bg-rug-grey">
	<div id="" class="flex flex-col items-start pt-4 filter-ui-group">
		<div id="" class="flex flex-col mb-10">
			<button id="" class="mb-2 text-left" :class="{ 'text-rug-light-blue': filter === 'origin' }" @click="filter = 'origin'">
				<h2>Origin</h2>
			</button>
			<fieldset data-filter-group>
				<div id="" class="flex flex-row space-x-4">
					{% set tags = craft.tags().group('origin') %}
					{% for tag in tags.all() %}
						<label class="control control-checkbox font-quicksand">{{ tag.title }}
							<input type="checkbox" value=".{{ tag.title|replace(' ', '') }}"/>
							<div class="control_indicator"></div>
						</label>
					{% endfor %}
				</div>
			</fieldset>
		</div>
		<div id="" class="flex flex-col mb-10">
			<button id="" class="mb-2 text-left" :class="{ 'text-rug-light-blue': filter === 'age' }" @click="filter = 'age'">
				<h2>Age</h2>
			</button>
			<fieldset data-filter-group>
				<div id="" class="flex flex-row space-x-4">
					{% set tags = craft.tags().group('age') %}
					{% for tag in tags.all() %}
						<label class="control control-checkbox font-quicksand">{{ tag.title }}
							<input type="checkbox" value=".{{ tag.title|replace(' ', '') }}"/>
							<div class="control_indicator"></div>
						</label>
					{% endfor %}
				</div>
			</fieldset>
		</div>
		{% set colors = [] %}
		{% set tags = craft.tags().group(['primaryColors','secondaryColors']) %}
		{% for tag in tags.all() %}
			{% set color = tag.title %}
			{% if color not in colors %}
				{% set colors = colors|merge([color]) %}
			{% endif %}
		{% endfor %}
		<div id="" class="flex flex-col mb-10">
			<button id="" class="mb-2 text-left" :class="{ 'text-rug-light-blue': filter === 'color' }" @click="filter = 'color'">
				<h2>Color</h2>
			</button>
			<fieldset data-filter-group>
				<div id="" class="flex flex-row space-x-4">
					{% set tags = colors %}
					{% for tag in tags %}
						<label class="control control-checkbox font-quicksand">{{ tag }}
							<input type="checkbox" value=".{{ tag|replace(' ', '') }}"/>
							<div class="control_indicator"></div>
						</label>
					{% endfor %}
				</div>
			</fieldset>
		</div>
		<div id="" class="flex flex-col mb-10">
			<button id="" class="mb-2 text-left" :class="{ 'text-rug-light-blue': filter === 'collection' }" @click="filter = 'collection'">
				<h2>Collection</h2>
			</button>
			<fieldset data-filter-group>
				<div id="" class="flex flex-row space-x-4">
					{% set categories = craft.categories().group('collections') %}
					{% for category in categories.all() %}
						<label class="control control-checkbox font-quicksand">{{ category.title }}
							<input type="checkbox" value=".{{ category.title|replace(' ', '') }}"/>
							<div class="control_indicator"></div>
						</label>
					{% endfor %}
				</div>
			</fieldset>
		</div>
		<div id="" class="flex flex-col mb-10">
			<button id="" class="mb-2 text-left" :class="{ 'text-rug-light-blue': filter === 'size' }" @click="filter = 'size'">
				<h2>Size</h2>
			</button>
			<fieldset data-filter-group>
				<div id="" class="flex flex-row space-x-4">
					{% set categories = craft.categories().group('size') %}
					{% for category in categories.all() %}
						<label class="control control-checkbox font-quicksand">{{ category.title }}
							<input type="checkbox" value=".size{{ category.title|replace(' ', '') }}"/>
							<div class="control_indicator"></div>
						</label>
					{% endfor %}
				</div>
			</fieldset>
		</div>
	</div>

	<div
		class="relative" x-data="{ flyoutMenuOpen: true }">
		<!-- Item active: "text-gray-900", Item inactive: "text-gray-500" -->
		<button type="button" class="inline-flex items-center space-x-2 text-base font-medium leading-6 text-gray-500 transition duration-150 ease-in-out group hover:text-gray-900 focus:outline-none focus:text-gray-900" @click="flyoutMenuOpen = !flyoutMenuOpen" x-state:on="Item active" x-state:off="Item inactive" :class="{ 'text-gray-900': flyoutMenuOpen, 'text-gray-500': !flyoutMenuOpen }">
			<span>
				<h2>Origin</h2>
			</span>
			<!-- Item active: "text-gray-600", Item inactive: "text-gray-400" -->
			<svg class="w-5 h-5 text-gray-400 transition duration-150 ease-in-out group-hover:text-gray-500 group-focus:text-gray-500" viewbox="0 0 20 20" fill="currentColor">
				<path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
			</svg>
		</button>
		<div class="absolute px-2 mt-3 transform -translate-x-1/2 sm:px-0" x-description="Flyout menu, show/hide based on flyout menu state." x-show="flyoutMenuOpen" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 translate-y-1" x-transition:enter-end="opacity-100 translate-y-0" x-transition:leave="transition ease-in duration-150" x-transition:leave-start="opacity-100 translate-y-0" x-transition:leave-end="opacity-0 translate-y-1">
			<div class="rounded-lg shadow-lg">
				<div class="overflow-hidden rounded-lg shadow-xs">
					<div class="relative z-20 grid gap-6 px-5 py-6 bg-white sm:gap-8 sm:p-8">
						<fieldset data-filter-group>
							<div id="" class="flex flex-col space-y-4">
								{% set tags = craft.tags().group('origin') %}
								{% for tag in tags.all() %}
									<label class="control control-checkbox font-quicksand">{{ tag.title }}
										<input type="checkbox" value=".{{ tag.title|replace(' ', '') }}"/>
										<div class="control_indicator"></div>
									</label>
								{% endfor %}
							</div>
						</fieldset>
					</div>
				</div>
			</div>
		</div>
	</div>

</section>
